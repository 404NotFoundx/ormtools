<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <entityVersion>4.0.0</entityVersion>

    <!--
         mvn clean install deploy -P release
    -->
    <parent>
        <groupId>org.sonatype.oss</groupId>
        <artifactId>oss-parent</artifactId>
        <version>9</version>
    </parent>

    <groupId>io.github.raniaia</groupId>
    <artifactId>approve</artifactId>
    <version>1.0.0.Rebirth</version>
    <packaging>jar</packaging>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <tag>master</tag>
        <url>https://github.com/raniaia/avaliable</url>
        <connection>scm:git@github.com:raniaia/approve.git</connection>
        <developerConnection>scm:git@github.com:raniaia/approve.git</developerConnection>
    </scm>

    <developers>
        <developer>
            <name>2B键盘</name>
            <email>raniaia@foxmail.com</email>
            <url>https://github.com/404NotFoundx</url>
        </developer>
    </developers>

    <distributionManagement>
        <repository>
            <id>repository</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>
        <java.version>1.8</java.version>
        <jdom.version>2.0.6</jdom.version>
        <kotlin.version>1.3.70</kotlin.version>
        <lombok.version>1.18.10</lombok.version>
        <fastjson.version>1.2.62</fastjson.version>
        <javassist.version>3.12.1.GA</javassist.version>
        <mysql.connector.version>8.0.11</mysql.connector.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <logback.version>1.2.3</logback.version>
        <slf4j.version>1.7.21</slf4j.version>
        <!-- plugin -->
        <maven.doc.version>2.8</maven.doc.version>
        <surefire.version>2.4.2</surefire.version>
        <maven.compile.version>3.2</maven.compile.version>
        <maven.test.skip>true</maven.test.skip>
    </properties>

    <dependencies>

        <!-- Jdbc Driver                                                 -->
        <!--                                                             -->
        <!--                                                             -->
        <!-- MYSQL Jdbc Driver                                           -->
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>${mysql.connector.version}</version>
        </dependency>
        <!--                                                             -->
        <!--                                                             -->
        <!--                                                             -->

        <!-- ########################################################### -->

        <!-- github.com/raniaia                                          -->
        <!--                                                             -->
        <!--                                                             -->
        <!-- available                                                   -->
        <dependency>
            <groupId>io.github.raniaia</groupId>
            <artifactId>available</artifactId>
            <version>1.0.0.FIRST</version>
        </dependency>
        <!--                                                             -->
        <!--                                                             -->
        <!--                                                             -->

        <!-- ########################################################### -->

        <!-- kotlin dependencies                                         -->
        <!--                                                             -->
        <!--                                                             -->
        <!--                                                             -->
