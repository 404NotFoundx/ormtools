<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.jiakesimk</groupId>
  <artifactId>minipika</artifactId>
  <version>1.0.0.BETA</version>
  <packaging>jar</packaging>

  <properties>
    <jdom.version>2.0.6</jdom.version>
    <kotlin.version>1.3.70</kotlin.version>
    <fastjson.version>1.2.62</fastjson.version>
    <javassist.version>3.12.1.GA</javassist.version>
    <mysql.connector.version>8.0.11</mysql.connector.version>
    <logback.version>1.2.3</logback.version>
    <slf4j.version>1.7.21</slf4j.version>
    <gmaven.version>1.0-rc-3</gmaven.version>
    <groovy.version>4.0.1</groovy.version>
    <maven.doc.version>2.8</maven.doc.version>
    <surefire.version>2.4.2</surefire.version>
    <maven.compile.version>3.8.0</maven.compile.version>
    <maven.test.skip>true</maven.test.skip>
    <asmtool.version>0.0.2</asmtool.version>
    <commons-codec.version>1.11</commons-codec.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>${mysql.connector.version}</version>
    </dependency>
    <!-- 日志支持 -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-core</artifactId>
      <version>${logback.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>${logback.version}</version>
      <scope>test</scope>
    </dependency>
    <!-- asm method -->
    <dependency>
      <groupId>com.github.houbb</groupId>
      <artifactId>asm-tool</artifactId>
      <version>${asmtool.version}</version>
    </dependency>
    <!-- common-codec -->
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>${commons-codec.version}</version>
    </dependency>
    <!-- fastjson -->
    <dependency>
      <groupId>com.alibaba</groupId>
      <artifactId>fastjson</artifactId>
      <version>${fastjson.version}</version>
    </dependency>
    <!-- sql解析 -->
    <dependency>
      <groupId>com.github.jsqlparser</groupId>
      <artifactId>jsqlparser</artifactId>
      <version>3.1</version>
    </dependency>
    <!-- xml解析 -->
    <dependency>
      <groupId>org.jdom</groupId>
      <artifactId>jdom2</artifactId>
      <version>${jdom.version}</version>
    </dependency>
    <!-- 字节码操作工具 -->
    <dependency>
      <groupId>javassist</groupId>
      <artifactId>javassist</artifactId>
      <version>${javassist.version}</version>
    </dependency>
    <dependency>
      <groupId>com.carrotsearch</groupId>
      <artifactId>java-sizeof</artifactId>
      <version>0.0.5</version>
    </dependency>
    <!-- junit测试 -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13-rc-2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <encoding>UTF-8</encoding>
          <compilerArgs>-parameters</compilerArgs>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>