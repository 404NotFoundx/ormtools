<?xml version="1.0" encoding="UTF-8" ?>
<minipika>

    <jdbc>
        <!-- url加参数 -->
        <url params="useUnicode=true,characterEncoding=utf-8,useSSL=false,serverTimezone=GMT">
            jdbc:mysql://127.0.0.1:3306/test
        </url>
        <driver>com.mysql.cj.jdbc.Driver</driver>
        <username>root</username>
        <password>root</password>
        <transaction>true</transaction>
        <cache refresh="5 + 6 + 7">true</cache>
    </jdbc>

    <connection>
        <min>2</min>
        <max>90</max>
    </connection>

    <entity>
        <mapper>org.minipika.builder</mapper>
        <package>
            org.minipika.experiment,
            org.minipika.experiment,
            org.minipika.experiment
        </package>
    </entity>

    <!-- 默认值 -->
    <default>
        <entity>default_entity.json</entity>
    </default>

</minipika>