<!ELEMENT minipika (datasources?, plugins?, properties?)>

<!ELEMENT datasources (master?, slaves?)>
<!ATTLIST datasources
using CDATA #IMPLIED
>

<!ELEMENT properties (printExecutingLog?)>

<!ELEMENT printExecutingLog EMPTY>

<!ELEMENT master (url, driver, username, password)>
<!ATTLIST master
type CDATA #IMPLIED
task CDATA
>

<!ELEMENT slaves (url, driver, username, password)>
<!ATTLIST slaves
type CDATA #IMPLIED
task CDATA #IMPLIED
>

<!ELEMENT property EMPTY>
<!ATTLIST property
key CDATA #REQUIRED
value CDATA #REQUIRED
>

<!ELEMENT url (property?)>
<!ATTLIST url
value CDATA #REQUIRED
>

<!ELEMENT driver EMPTY>
<!ATTLIST driver
value CDATA #REQUIRED
>

<!ELEMENT username EMPTY>
<!ATTLIST username
value CDATA #REQUIRED
>

<!ELEMENT password EMPTY>
<!ATTLIST password
value CDATA #REQUIRED
>

<!ELEMENT plugins (plugin?)>

<!ELEMENT plugin EMPTY>
<!ATTLIST plugin
class CDATA #REQUIRED
>